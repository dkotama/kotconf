  <%= form_tag({:action => nil, method: "post"}, name: "formLogin") do %>
    <div class="form-group">
      <legend><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Login</legend>
    </div>
    <div class="form-group">
      <label for="inputEmail" class="control-label">Email</label>
      <%= text_field_tag(:email,nil, class: "form-control", placeholder: "Email", id: "inputEmail") %>
    </div>
    <div class="form-group">
      <label for="inputEmail" class="control-label">Password</label>
      <%= password_field_tag(:password_verify, nil, class: "form-control", placeholder: "Password", id: "inputEmail") %>
    </div>
    <div class="form-group">
        <%= submit_tag("Log in", class:"btn btn-primary") %>
    </div>
    <div class="form-group">
      <small>Don't have an account ?</small>&nbsp;
      <%= link_to "Register Now", welcomes_register_path, class: "btn btn-xs btn-success" %>
    </div>
  <% end %>